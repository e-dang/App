{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@config": ["config"],
      "@core": ["src/core"],
      "@core/*": ["src/core/*"],
      "@workout-templates": ["src/workout-templates"],
      "@workout-templates/*": ["src/workout-templates/*"],
      "@exercise-group-templates": ["src/exercise-group-templates"],
      "@exercise-group-templates/*": ["src/exercise-group-templates/*"],
      "@exercise-templates": ["src/exercise-templates"],
      "@exercise-templates/*": ["src/exercise-templates/*"],
      "@exercise-types": ["src/exercise-types"],
      "@exercise-types/*": ["src/exercise-types/*"],
      "@health": ["src/health"],
      "@health/*": ["src/health/*"],
      "@src": ["src"],
      "@src/*": ["src/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "useRootDirs": true
      }
    ]
  },
  "exclude": ["node_modules"]
}
