{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@api": ["src/api"],
            "@api/*": ["src/api/*"],
            "@entities": ["src/entities"],
            "@entities/*": ["src/entities/*"],
            "@auth": ["src/auth"],
            "@auth/*": ["src/auth/*"],
            "@schemas": ["src/schemas"],
            "@schemas/*": ["src/schemas/*"],
            "@errors": ["src/errors"],
            "@errors/*": ["src/errors/*"],
            "@config": ["config"],
            "@config/*": ["config/*"],
            "@src": ["src"],
            "@src/*": ["src/*"],
            "@tests": ["tests"],
            "@tests/*": ["tests/*"]
        }
    },
    "exclude": ["node_modules"]
}
