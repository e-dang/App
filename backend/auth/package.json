{
    "name": "auth",
    "version": "0.0.1",
    "description": "Auth microservice",
    "devDependencies": {
        "@types/node": "^8.0.29",
        "@types/passport-jwt": "^3.0.6",
        "jest": "^27.3.1",
        "nodemon": "^2.0.15",
        "ts-node": "3.3.0",
        "tsconfig-paths": "^3.11.0",
        "typescript": "3.3.3333"
    },
    "dependencies": {
        "body-parser": "^1.18.1",
        "dotenv": "^10.0.0",
        "express": "^4.15.4",
        "passport": "^0.5.0",
        "passport-jwt": "^4.0.0",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.10",
        "typeorm": "0.2.39"
    },
    "scripts": {
        "start": "tsnode src/index.ts",
        "dev": "nodemon",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            "node_modules"
        ],
        "exec": "ts-node -r tsconfig-paths/register ./src/index.ts"
    }
}
