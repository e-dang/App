{
    "name": "auth",
    "version": "0.0.1",
    "description": "Auth microservice",
    "scripts": {
        "build": "docker build -t ericdang/auth:dev -f docker/dev/Dockerfile .",
        "build:ci": "docker build -t ericdang/auth:${TAG} -f docker/prod/Dockerfile .",
        "compile": "ttsc -P tsconfig.json",
        "start": "telepresence intercept auth --port 3000 --docker-run -- -v $(pwd)/backend/auth:/home/auth/app -v /home/auth/app/node_modules -it --rm ericdang/auth:dev",
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
        "test": "yarn test:unit && yarn test:int",
        "test:unit": "jest --config=jest.config.unit.js --group=unit",
        "test:int": "jest --config=jest.config.int.js --group=integration",
        "test:unit:docker": "docker run -t ericdang/auth:dev yarn test:unit",
        "test:int:docker": "telepresence intercept auth --port 3000 --docker-run -- ericdang/auth:dev yarn test:int",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
        "genkeys": "ts-node scripts/genKeys.ts"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.15.4",
        "express-validator": "^6.13.0",
        "handlebars": "^4.7.7",
        "hi-base32": "^0.5.1",
        "jose": "^4.3.7",
        "morgan": "^1.10.0",
        "nodemailer": "^6.7.1",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.10",
        "typeorm": "0.2.39"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.2",
        "@types/jsdom": "^16.2.13",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.11.7",
        "@types/nodemailer": "^6.4.4",
        "@types/passport-jwt": "^3.0.6",
        "@types/quoted-printable": "^1.0.0",
        "@types/supertest": "^2.0.11",
        "@types/utf8": "^3.0.0",
        "axios": "^0.24.0",
        "jest": "^27.3.1",
        "jest-runner-groups": "^2.1.0",
        "jsdom": "^18.1.1",
        "jsonwebtoken": "^8.5.1",
        "mockdate": "^3.0.5",
        "moment": "^2.29.1",
        "nodemon": "^2.0.15",
        "quoted-printable": "^1.0.1",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.7",
        "ts-node": "3.3.0",
        "tsconfig-paths": "^3.11.0",
        "ttypescript": "^1.5.12",
        "typeorm-transactional-tests": "^1.1.5",
        "typescript": "^4.4.4",
        "typescript-transform-paths": "^3.3.1"
    }
}
